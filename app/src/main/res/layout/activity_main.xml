<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.owner.amazingdraw.MainActivity">

    <TextView
        android:id="@+id/tv_noimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No image."
        android:textSize="20sp"
        android:gravity="center"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap + to creat a new one."
        android:layout_below="@id/tv_noimage"
        android:layout_centerInParent="true"
        android:textSize="16sp"/>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fb_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:padding="16dp"
        fab:menu_colorNormal="@color/colorAccent"
        fab:menu_colorPressed="@color/colorAccent">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fb_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/colorAccent"
            app:fab_colorPressed="@color/colorAccent"
            android:src="@drawable/ic_linked_camera_black_24dp"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fb_brush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/colorAccent"
            app:fab_colorPressed="@color/colorAccent"
            android:src="@drawable/ic_brush_black_24dp"/>

    </com.github.clans.fab.FloatingActionMenu>




</RelativeLayout>
